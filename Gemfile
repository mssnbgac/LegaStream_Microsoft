source "https://rubygems.org"

ruby "3.3.10"

# Rails framework
gem "rails", "~> 8.0.0"

# Database - using SQLite for development simplicity
gem "sqlite3", "~> 2.0"

# Authentication
gem "jwt"
gem "bcrypt", "~> 3.1.7"

# CORS handling
gem "rack-cors"

# Development server
gem "puma", "~> 6.0"
gem "webrick"

# Bootsnap for faster boot times
gem "bootsnap", require: false

# Environment variables
gem "dotenv"

# Email
gem "mail"

# AI and Document Processing
gem "ruby-openai"
gem "pdf-reader"
gem "docx"

# WebSocket support
gem "faye-websocket"

# Reporting
gem "prawn"
gem "prawn-table"