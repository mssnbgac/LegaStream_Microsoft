# Database Configuration
DATABASE_HOST=localhost
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
SECRET_KEY_BASE=your_secret_key_base_here

# ActionCable Configuration
ACTION_CABLE_URL=ws://localhost:3000/cable
ACTION_CABLE_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# AI/ML Configuration
# Choose AI Provider: gemini (recommended), claude, openai, or ollama
AI_PROVIDER=gemini

# Google Gemini (Recommended - Free tier available)
# Get key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Ollama (Local LLM - No API key needed)
# Install from: https://ollama.ai/
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# LangChain (Optional)
LANGCHAIN_API_KEY=your_langchain_api_key_here

# File Storage
STORAGE_PATH=./storage

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_DOMAIN=localhost
FROM_EMAIL=noreply@legastream.com

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Monitoring
LOG_LEVEL=debug